
<%- include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p>Winsome Canvas</p>  
             <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
             </div>
            
        </div>

        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=place.image %>" alt="">
                <div class="caption-full">
                    <h4 class="pull-right">Dhaka, Bangladesh</h4>
                    <h4><a href="#"><%= place.name%></a></h4>
                    <p><%= place.description %></p>
                </div>
            </div>

            <div class="well">
                <div class="text-right">
                     <a class="btn btn-success" href="/places/<%= place._id%>/comments/new">Add a new comment</a>
                </div>
                <hr>

                <% place.comments.forEach((comment)=>{ %>
                     <div class="row">
                         <div class="col-md-12">
                            <strong><%=comment.author%></strong>
                             <span class="pull-right">10 days ago</span>
                             <p><%=comment.text%></p> 
                         </div>
                     </div>
                    
                <% }); %> 
                
            </div>
        </div>
        
    </div>

</div>






 

<%- include ../partials/footer%>

