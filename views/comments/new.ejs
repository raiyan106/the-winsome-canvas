<%include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Add a new comment to <%= place.name%></h1>

        <div style="width: 30%; margin:30px auto;">
            <form action="/places/<%= place._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">    
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>

                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" name="" value="Submit">
                </div>
                
            </form>

            <a href="/places">Go Back</a>
        </div>
        
    </div>
</div>



<%include ../partials/footer%>